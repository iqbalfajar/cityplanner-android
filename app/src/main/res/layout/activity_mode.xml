<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.muzavan.userpc.cityplanner.ModeActivity">

    <ImageView
        style="@style/BackGroundImageView"
        android:src="@drawable/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCityBuildMode"
                android:layout_width="225px"
                android:layout_height="225px"
                android:layout_margin="16dp"
                android:background="@drawable/city_build"
                />

            <Button
                android:id="@+id/buttonCityWatchMode"
                android:layout_width="225px"
                android:layout_height="225px"
                android:layout_margin="16dp"
                android:background="@drawable/city_watch"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
